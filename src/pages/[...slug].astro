---
import "../styles/global.css";

// IMPORTS
import { client } from "../client";
import Layout from '../layouts/Layout.astro';
import Error from '../components/Error.astro';
import MyPage from "../react/MyPage";

const { slug: path = "/" } = Astro.params;
const { searchParams } = Astro.url;

let error: string = '';
let pageAsset;

try {
	pageAsset = await client.page.get({ path, ...searchParams });
} catch(e) {
	error = "Something has gone wrong..."
}
---

<Layout>
	{error ? (
		<Error error={error} />
	) : (
		<MyPage client:only="react" initialPageAsset={pageAsset} pathname={path} />
	)}
</Layout>
